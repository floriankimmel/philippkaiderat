---
interface Props {
  title: string;
  date: Date;
  image?: string;
  excerpt?: string;
  slug: string;
}

const { title, date, image, excerpt, slug } = Astro.props;

const day = date.getDate().toString().padStart(2, '0');
const month = date.toLocaleString('de-DE', { month: 'short' }).toUpperCase();
---

<article class="blog-card group">
  <a href={`/blog/${slug}`} class="blog-card__link">
    <div class="blog-card__image-wrapper">
      {image ? (
        <img
          src={image}
          alt={title}
          class="blog-card__image"
          loading="lazy"
        />
      ) : (
        <div class="blog-card__placeholder"></div>
      )}

      <div class="blog-card__date-badge">
        <span class="blog-card__day">{day}</span>
        <span class="blog-card__month">{month}</span>
      </div>
    </div>

    <div class="blog-card__content">
      <h3 class="blog-card__title">{title}</h3>
      {excerpt && <p class="blog-card__excerpt">{excerpt}</p>}
    </div>
  </a>
</article>

<style>
  .blog-card {
    background: var(--color-bs-surface-2);
    border-radius: 0.75rem;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .blog-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.3);
  }

  .blog-card__link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .blog-card__image-wrapper {
    position: relative;
    aspect-ratio: 16/10;
    overflow: hidden;
  }

  .blog-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .blog-card:hover .blog-card__image {
    transform: scale(1.05);
  }

  .blog-card__placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--color-bs-surface-1), var(--color-bs-surface-3));
  }

  .blog-card__date-badge {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background: var(--color-bs-surface-0);
    padding: 0.5rem 0.75rem;
    border-radius: 0.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    line-height: 1;
  }

  .blog-card__day {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-bs-foreground-light);
  }

  .blog-card__month {
    font-size: 0.625rem;
    font-weight: 600;
    color: var(--color-bs-foreground-dark);
    letter-spacing: 0.05em;
    margin-top: 0.125rem;
  }

  .blog-card__content {
    padding: 1.25rem;
  }

  .blog-card__title {
    font-family: var(--font-display);
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-bs-foreground-light);
    margin: 0;
    line-height: 1.3;
  }

  .blog-card__excerpt {
    font-size: 0.875rem;
    color: var(--color-bs-foreground-dark);
    margin: 0.75rem 0 0;
    line-height: 1.5;
  }
</style>
