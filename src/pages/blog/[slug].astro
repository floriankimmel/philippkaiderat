---
import Layout from "../../layouts/Layout.astro"
import { getCollection, render } from 'astro:content'
import type { CollectionEntry } from 'astro:content'

export async function getStaticPaths() {
  const posts = await getCollection('blog')
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }))
}

interface Props {
  post: CollectionEntry<'blog'>
}

const { post } = Astro.props
const { Content } = await render(post)

const formattedDate = post.data.date.toLocaleDateString('de-DE', {
  day: '2-digit',
  month: 'long',
  year: 'numeric',
})
---

<Layout title={`${post.data.title} - Philipp Kaider`}>
  <article class="bs-container py-16 lg:py-24">
    <header class="blog-post-header">
      {post.data.image && (
        <div class="blog-post-image-wrapper">
          <img
            src={post.data.image}
            alt={post.data.title}
            class="blog-post-image"
          />
          <div class="blog-post-date-badge">
            <span class="blog-post-day">{post.data.date.getDate().toString().padStart(2, '0')}</span>
            <span class="blog-post-month">{post.data.date.toLocaleString('de-DE', { month: 'short' }).toUpperCase()}</span>
          </div>
        </div>
      )}

      <h1 class="bs-h1 mt-8">{post.data.title}</h1>
      <time class="blog-post-date">{formattedDate}</time>
    </header>

    <div class="blog-post-content prose">
      <Content />
    </div>

    <footer class="blog-post-footer">
      <a href="/blog" class="bs-btn">Zur√ºck zum Blog</a>

      {post.data.tags && post.data.tags.length > 0 && (
        <div class="blog-post-tags">
          {post.data.tags.map((tag) => (
            <span class="blog-post-tag">{tag}</span>
          ))}
        </div>
      )}
    </footer>
  </article>
</Layout>

<style>
  .blog-post-header {
    max-width: 48rem;
    margin: 0 auto;
  }

  .blog-post-image-wrapper {
    position: relative;
    border-radius: 1rem;
    overflow: hidden;
  }

  .blog-post-image {
    width: 100%;
    height: auto;
    aspect-ratio: 16/9;
    object-fit: cover;
  }

  .blog-post-date-badge {
    position: absolute;
    top: 1.5rem;
    left: 1.5rem;
    background: var(--color-bs-surface-0);
    padding: 0.75rem 1rem;
    border-radius: 0.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    line-height: 1;
  }

  .blog-post-day {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-bs-foreground-light);
  }

  .blog-post-month {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-bs-foreground-dark);
    letter-spacing: 0.05em;
    margin-top: 0.25rem;
  }

  .blog-post-date {
    display: block;
    margin-top: 0.5rem;
    color: var(--color-bs-foreground-dark);
    font-size: 0.875rem;
  }

  .blog-post-content {
    max-width: 48rem;
    margin: 3rem auto 0;
    line-height: 1.7;
  }

  .blog-post-content :global(h1),
  .blog-post-content :global(h2),
  .blog-post-content :global(h3) {
    font-family: var(--font-display);
    color: var(--color-bs-foreground-light);
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .blog-post-content :global(h1) {
    font-size: 2rem;
  }

  .blog-post-content :global(h2) {
    font-size: 1.5rem;
  }

  .blog-post-content :global(p) {
    color: var(--color-bs-foreground-dark);
    margin-bottom: 1rem;
  }

  .blog-post-content :global(ul),
  .blog-post-content :global(ol) {
    color: var(--color-bs-foreground-dark);
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  .blog-post-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .blog-post-footer {
    max-width: 48rem;
    margin: 3rem auto 0;
    padding-top: 2rem;
    border-top: 1px solid var(--color-bs-surface-3);
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .blog-post-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .blog-post-tag {
    background: var(--color-bs-surface-2);
    color: var(--color-bs-foreground-dark);
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 500;
  }
</style>
